{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "capybara-onsen/log",
    "description": "Capybara Onsen PHP Framework- Log Component",
    "version": "0.0.1",
    "type": "library",
    "keywords": [
        "log",
        "psr3"
    ],
    "homepage": "https://cafe-capy.net/capybara-onsen/",
    "readme": "README.md",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Masaru Yamagishi",
            "email": "akai_inu@live.jp",
            "homepage": "https://cafe-capy.net",
            "role": "Author"
        }
    ],
    "support": {
        "docs": "https://cafe-capy.net/capybara-onsen/",
        "issues": "https://github.com/il-m-yamagishi/capybara-onsen/issues",
        "source": "https://github.com/il-m-yamagishi/capybara-onsen/"
    },
    "provide": {
        "psr/log-implementation": "3.0.0"
    },
    "require": {
        "php": "~8.1.0|~8.2.0|~8.3.0",
        "psr/log": "^2.0.0|^3.0.0"
    },
    "require-dev": {
        "monolog/monolog": "^3.7.0",
        "phpunit/phpunit": "^11.2.8"
    },
    "suggest": {
        "monolog/monolog": "^3.0 To use MonologWriter"
    },
    "autoload": {
        "psr-4": {
            "CapybaraOnsen\\Log\\": ""
        },
        "exclude-from-classmap": [
            "*Test.php"
        ]
    },
    "scripts": {
        "test": "phpunit *Test.php"
    },
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
